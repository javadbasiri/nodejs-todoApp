<!DOCTYPE html>
<html lang="en">
  <%- include('./includes/head.ejs') %>
  <body>
    <h1>Todo App</h1>
    <form method="POST" action="/admin/add-todo">
      <input type="text" name="title" />
      <input type="submit" class="btn btn-primary" />
    </form>
    <div class="tasks">
      <div class="col">
        <h2 class="">to do</h2>
        <% if(data.length > 0) { %> <% for(let todo of data){ %>
        <div class="bg-warning">
          <p><%= todo.text %></p>
          <a class="btn btn-danger" href="/admin/delete-todo?id=<%= todo.id %>"
            >delete</a
          >
          <a class="btn btn-success" href="/admin/check-todo?id=<%= todo.id %>"
            >done</a
          >
        </div>
        <% } %> <% } %>
      </div>
      <div class="col">
        <h2>done</h2>
        <% if(done.length > 0) { %> <% for(let todo of done){ %>
        <div class="bg-success">
          <p><%= todo.text %></p>
          <a class="btn btn-danger" href="/admin/delete-todo?id=<%= todo.id %>"
            >delete</a
          >
        </div>
        <% } %> <% } %>
      </div>
    </div>
    <script src="bootstrapJs/bootstrap.min.js" />
  </body>
</html>
